	<groupId>net.imagej</groupId>
	<artifactId>slim-curve-ops</artifactId>
	<version>0.1.0-SNAPSHOT</version>

	<name>slim-curve-ops</name>
	<description>A slim-curve plugin of ImageJ.</description>
	<url>https://slim-curve.github.io/</url>
	<inceptionYear>2017</inceptionYear>
	<organization>
		<name>SLIM Curve</name>
		<url>https://github.com/slim-curve</url>
	</organization>
	<licenses>
